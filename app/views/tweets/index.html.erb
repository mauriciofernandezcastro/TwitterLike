<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<%= link_to "New tweet", new_tweet_path %>

<!-- app/views/tweets/index.html.erb -->
<h1>Tweets</h1>

<%= form_tag(tweets_path, method: 'get') do %>
  <%= text_field_tag :search, params[:search], placeholder: 'Buscar tweets' %>
  <%= submit_tag 'Buscar' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.username %></td>
        <td><%= tweet.description %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tweets, theme: 'twitter-bootstrap' %>
<%= link_to 'New Tweet', new_tweet_path %>
